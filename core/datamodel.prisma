enum Permission {
  USER,
  SUPERUSER,
  ADMIN
}

type Account {
  id: ID! @unique
  name: String!
  employeeNo: String @unique
  email: String! @unique
  password: String!
  hrChargeKr: Int
  projects: [Project!]
  permissions: [Permission]
}

type Jwt {
  JWT: String!
  expires: DateTime!
  user: Account!
}

type Timesheet {
  id: ID! @unique
  user: Account! @relation(name: "TimesheetByUser")
  confirmedBy: Account @relation(name: "ConfirmedBy")
  from: DateTime!
  to: DateTime!
  workPeriods: [WorkPeriod] @relation(name: "WorkperiodByTimesheet")
}

type WorkPeriod {
  id: ID! @unique
  from: DateTime!
  to: DateTime
  timesheet: Timesheet! @relation(name: "WorkperiodByTimesheet")
  confirmedBy: Account @relation(name: "WorkPeriodConfirmedBy")
}

type Project {
  id: ID! @unique
  name: String!
  active: Boolean! @default(value: "true")
  users: [Account!]
  expenses: [Expense!]
}

type Expense {
  id: ID! @unique
  description: String
  date: DateTime!
  amtKr: Int!
  registeredBy: Account! @relation(name: "ExpenseByUser")
  confirmedBy: Account @relation(name: "ExpenseConfirmedByUser")
}